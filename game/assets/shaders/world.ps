// Shader input. These cannot be anything different for spritebatch calls
input float2 inUV;
input float4 inColor;

// Texture
Texture0 texture0;

// Uniforms
extern float4 red;
extern float4 green;
extern float4 blue;

void main()
{
    float4 color0 = texture0(inUV) * inColor;

    float4 final = 
        red * color0.r +
        green * color0.g +
        blue * color0.b;

    oColor = saturate(final);
}
